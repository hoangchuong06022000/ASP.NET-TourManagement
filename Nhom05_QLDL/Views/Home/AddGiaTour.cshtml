@model Model.Model.GIATOUR

@{
    ViewBag.Title = "AddGiaTour";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MAGIA)

        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Thêm Mới</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label>Mã Giá:  </label>
                        @Html.DisplayFor(model => model.MAGIA)
                    </div>

                    <div class="form-group">
                        <label>Tour</label>
                        @Html.DropDownListFor(model => model.MATOUR, null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.MATOUR, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label>Thành Tiền</label>
                        @Html.EditorFor(model => model.THANHTIEN, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.THANHTIEN, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label>Bắt Đầu</label>
                        @Html.TextBoxFor(model => model.TG_BATDAU, "{0:yyyy-MM-ddThh:mm:ss}", htmlAttributes : new { @class = "form-control", type = "datetime-local" })
                        @Html.ValidationMessageFor(model => model.TG_BATDAU, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label>Kết Thúc</label>
                        @Html.TextBoxFor(model => model.TG_KETTHUC, "{0:yyyy-MM-ddThh:mm:ss}", htmlAttributes : new { @class = "form-control", type = "datetime-local" })
                        @Html.ValidationMessageFor(model => model.TG_KETTHUC, "", new { @class = "text-danger" })
                    </div>

                    <div class="modal-footer">
                        <div class="form-group">
                            <a href="@Url.Action("Index", "Home")" class="add"><button type="button" class="btn">Huỷ</button></a>
                            <input type="submit" value="Thêm" class="btn btn-default" style="background-color: #51bcda;" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
