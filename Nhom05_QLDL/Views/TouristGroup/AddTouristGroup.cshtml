@model Model.Model.DOANDULICH

@{
    ViewBag.Title = "AddTouristGroup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
@Html.AntiForgeryToken()

<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.MADOAN)
    @Html.HiddenFor(model => model.DOANHTHU)

    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Thêm Mới</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label>Mã Đoàn:  </label>
                    @Html.DisplayFor(model => model.MADOAN)
                </div>

                <div class="form-group">
                    <label>Tour</label>
                    <div>
                        @Html.DropDownListFor(model => model.MATOUR, null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.MATOUR, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label>Ngày Khởi Hành</label>
                    @Html.TextBoxFor(model => model.NGAYKHOIHANH, "{0:yyyy-MM-ddThh:mm:ss}", htmlAttributes: new { @class = "form-control", type = "datetime-local" })
                    @Html.ValidationMessageFor(model => model.NGAYKHOIHANH, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label>Ngày Kết Thúc</label>
                    @Html.TextBoxFor(model => model.NGAYKETTHUC, "{0:yyyy-MM-ddThh:mm:ss}", htmlAttributes: new { @class = "form-control", type = "datetime-local" })
                    @Html.ValidationMessageFor(model => model.NGAYKETTHUC, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label>Hành Trình</label>
                    @Html.EditorFor(model => model.NOIDUNG.HANHTRINH, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NOIDUNG.HANHTRINH, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label>Khách Sạn</label>
                    @Html.EditorFor(model => model.NOIDUNG.KHACHSAN, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NOIDUNG.KHACHSAN, "", new { @class = "text-danger" })
                </div>

                <div class="modal-footer">
                    <div class="form-group">
                        <a href="@Url.Action("TouristGroup", "TouristGroup")" class="add"><button type="button" class="btn">Huỷ</button></a>
                        <input type="submit" value="Thêm" class="btn btn-default" style="background-color: #51bcda;" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
}

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
