@model Model.Model.LOAIHINHDULICH

@{
    ViewBag.Title = "DeleteLoaiHinh";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.MALOAIHINH)

    <div class="form-horizontal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Bạn có muốn xoá Loại Hình này không?</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label>Mã Loại Hình: </label>
                        @Html.DisplayFor(model => model.MALOAIHINH)
                    </div>

                    <div class="form-group">
                        <label>Tên Loại Hình: </label>
                        @Html.DisplayFor(model => model.TENLOAIHINH)
                    </div>

                    <div class="modal-footer">
                        <div class="form-group">
                            <a href="@Url.Action("LoaiHinh", "Home")" class="add"><button type="button" class="btn">Huỷ</button></a>
                            <input type="submit" value="Xoá" class="btn btn-default" style="background-color: #51bcda;" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
