@model Model.Model.CHIPHI

@{
    ViewBag.Title = "AddChiPhi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
@Html.AntiForgeryToken()

<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Thêm Mới</h4>
            </div>
            <div class="modal-body">

                <div class="form-group">
                    <label>Chi Phí</label>
                    <div>
                        @Html.DropDownList("MACHIPHI", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.MACHIPHI, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label>Mã Đoàn</label>
                    <div>
                        @Html.DropDownList("MADOAN", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.MADOAN, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label>Số Tiền</label>
                    @Html.EditorFor(model => model.SOTIEN, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SOTIEN, "", new { @class = "text-danger" })
                </div>
                <div class="modal-footer">
                    <div class="form-group">
                        <a href="@Url.Action("LoaiChiPhi", "TouristGroup")" class="add"><button type="button" class="btn" style="background-color: #51bcda;"><i class="fa fa-usd"></i> Loại Chi Phí</button></a>
                        <a href="@Url.Action("TouristGroup", "TouristGroup")" class="add"><button type="button" class="btn">Huỷ</button></a>
                        <input type="submit" value="Thêm" class="btn btn-default" style="background-color: #51bcda;" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
}

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
