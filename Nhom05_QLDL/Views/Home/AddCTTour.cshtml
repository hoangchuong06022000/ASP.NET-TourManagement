@model Model.Model.CHITIETTOUR

@{
    ViewBag.Title = "AddCTTour";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Thêm Mới</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label>Tour</label>
                    <div>
                        @Html.DropDownList("MATOUR", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.MATOUR, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label>Địa Điểm</label>
                    <div>
                        @Html.DropDownList("MADIADIEM", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.MADIADIEM, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label>Thứ Tự</label>
                    <div>
                        @Html.EditorFor(model => model.THUTU, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.THUTU, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="form-group">
                        <a href="@Url.Action("DiaDiem", "Home")" class="add"><button type="button" class="btn" style="background-color: #51bcda;"><i class="fa fa-map-marker"></i> Địa Điểm</button></a>
                        <a href="@Url.Action("Index", "Home")" class="add"><button type="button" class="btn">Huỷ</button></a>
                        <input type="submit" value="Thêm" class="btn btn-default" style="background-color: #51bcda;" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
}

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
