@model Model.Model.LOAIHINHDULICH

@{
    ViewBag.Title = "AddLoaiHinh";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
@Html.AntiForgeryToken()

<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.MALOAIHINH)

    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Thêm Mới</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label>Mã Loại Hình:  </label>
                    @Html.DisplayFor(model => model.MALOAIHINH)
                </div>

                <div class="form-group">
                    <label>Tên Loại Hình</label>
                    @Html.EditorFor(model => model.TENLOAIHINH, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TENLOAIHINH, "", new { @class = "text-danger" })
                </div>

                <div class="modal-footer">
                    <div class="form-group">
                        <a href="@Url.Action("LoaiHinh", "Home")" class="add"><button type="button" class="btn">Huỷ</button></a>
                        <input type="submit" value="Thêm" class="btn btn-default" style="background-color: #51bcda;" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
}
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
