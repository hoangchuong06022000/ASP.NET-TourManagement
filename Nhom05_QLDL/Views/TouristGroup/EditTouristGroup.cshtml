@model Model.Model.DOANDULICH

@{
    ViewBag.Title = "EditTouristGroup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
@Html.AntiForgeryToken()

<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.MADOAN)

    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Chỉnh Sửa</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label>Tour</label>
                    <div>
                        @Html.DropDownListFor(model => model.MATOUR, null, htmlAttributes: new { @class = "form-control" } )
                        @Html.ValidationMessageFor(model => model.MATOUR, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label>Ngày Khởi Hành</label>
                    @Html.EditorFor(model => model.NGAYKHOIHANH, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NGAYKHOIHANH, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label>Ngày Kết Thúc</label>
                    @Html.EditorFor(model => model.NGAYKETTHUC, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NGAYKETTHUC, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label>Doanh Thu</label>
                    @Html.EditorFor(model => model.DOANHTHU, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DOANHTHU, "", new { @class = "text-danger" })
                </div>
                <div class="modal-footer">
                    <div class="form-group">
                        <a href="@Url.Action("TouristGroup", "TouristGroup")" class="add"><button type="button" class="btn">Huỷ</button></a>
                        <input type="submit" value="Sửa" class="btn btn-default" style="background-color: #51bcda;" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
}

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
