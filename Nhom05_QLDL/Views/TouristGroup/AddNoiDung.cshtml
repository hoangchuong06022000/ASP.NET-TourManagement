@model Model.Model.NOIDUNG

@{
    ViewBag.Title = "AddNoiDung";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
@Html.AntiForgeryToken()

<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Thêm Mới</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label>Mã Đoàn</label>
                    <div>
                        @Html.DropDownList("MADOAN", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.MADOAN, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label>Hành Trình</label>
                    @Html.EditorFor(model => model.HANHTRINH, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.HANHTRINH, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label>Khách sạn</label>
                    @Html.EditorFor(model => model.KHACHSAN, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.KHACHSAN, "", new { @class = "text-danger" })
                </div>
                <div class="modal-footer">
                    <div class="form-group">
                        <a href="@Url.Action("TouristGroup", "TouristGroup")" class="add"><button type="button" class="btn">Huỷ</button></a>
                        <input type="submit" value="Thêm" class="btn btn-default" style="background-color: #51bcda;" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
}

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
